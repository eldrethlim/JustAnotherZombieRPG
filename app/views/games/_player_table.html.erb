<table class="table table-hover table-bordered table-condensed table-responsive fixed">
  <thead>
    <tr>
      <td width="50%"><b> Player Name </b></td>
      <td width="50%" align="center"><b> Controls </b></td>
    </tr>
  </thead>

  <tbody>
    <% players.each do |player| %>
      <% if player != current_player %>
        <tr>
          <td width="50%"> <%= player.username %> </td>
          <td width="50%" align="center"> 
            <%= button_to "Play with this player", setup_games_path(player_id: player.id), controller: 'games_controller', action: 'setup', method: :post, class: 'btn btn-success', data: { disable_with: 'Creating'} %> 
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>