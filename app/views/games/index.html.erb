<div class="container">
  <% if !current_player %>
    <%= render partial: 'page/home' %>
  <% else %>
    <% if current_player.sign_in_count < 2 %>
      <h2> Welcome, <%= current_player.username %>! </h2>
    <% else %>
      <h2 > Welcome back, <%= current_player.username %>! </h2>
    <% end %>


    <div class="doublespacing">
      <h3>Active Games</h3>
      <div class="spacing">
        <%= render partial: 'games/games_list_table', locals: {games: @games} %>
      </div>
    </div>

    <div class="doublespacing">
      <h3>Create a new game</h3>
      <div class="spacing">
        <%= render partial: 'games/players_list_table', locals: {players: @players} %>
      </div>
    </div>
  <% end %>
</div>